<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(https://www.hitaambrish.com/img/uk_bangalore.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Decoding Geeta with Hita</h1>
                <p class="breadcrumb-custom">Registration<span class="mx-2">&gt;</span> <span>Register</span></p>
            </div>
        </div>
    </div>
</div>  
<div class="site-section bg-light" id="section-contact">
    @model HitaRasDhara.Models.UserResponse5Aug
    <div class="container">
        <div class="row justify-content-center mb-5 ml-2 mr-2" id="MainBlock">
            <div class="order-md-1" data-aos="fade">
                <div class="text-left pb-1 border-primary mb-4">
                    <h2 class="text-primary">Registration</h2>
                    <h5 class="color-black-opacity-5"> Register your seat </h5>
                </div>
                <div class="row">
                    <div class="col-md-5 mobile">
                        <div class="p-4 mb-3 bg-white">
                            <h3 class="h5 text-black mb-3">Shree Harivansh! </h3>
                            <p>Some Content here. <br /> <br /> Thank you & Shree Harivansh, <br /> Team Hita Ambrish</p>
                            @*<p><a href="#" class="btn btn-primary px-4 py-2 text-white">Learn More</a></p>*@
                        </div>
                    </div>
                    <div class="col-md-7 mb-5">
                        <form class="p-5 bg-white form-horizontal" id="NewEntryForm" method="post">
                            @{
                                List<SelectListItem> AllowedYearOfBirth = new List<SelectListItem>();
                                for (int i = 1919; i <= 2005; i++)
                                {
                                    AllowedYearOfBirth.Add(new SelectListItem
                                    {
                                        Text = i.ToString(),
                                        Value = i.ToString()
                                    });
                                }
                            }
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "Name", type = "text", id = "name"})
                                    @Html.ValidationMessageFor(m => m.Name, "", new {@class = "text-danger"})
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Phone, new {@class = "form-control", placeholder = "Phone"})
                                    @Html.ValidationMessageFor(m => m.Phone, "", new {@class = "text-danger"})
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Email", type = "text", id = "Email"})
                                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.City, new {@class = "form-control", placeholder = "City"})
                                    @Html.ValidationMessageFor(m => m.City, "", new {@class = "text-danger"})
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12">
                                    @Html.DropDownListFor(model => model.YearOfBirth, AllowedYearOfBirth, "Select Year Of Birth", new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.YearOfBirth, "", new {@class = "text-danger"})
                                </div>
                            </div>
                            @Html.Hidden("Question", "null")
                            <div class="row form-group">
                                <div class="col-md-12" id="Submit">
                                    <input type="submit" id="SubmitOfNewForm" value="Register" class="btn btn-primary py-2 px-4 text-white w-100">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-5">
                        <div class="p-4 mb-3 bg-white desktop">
                            <h3 class="h5 text-black mb-3">Shree Harivansh! </h3>
                            <p>Some Content here. <br /> <br /> Thank you & Shree Harivansh, <br /> Team Hita Ambrish</p>
                            @*<p><a href="#" class="btn btn-primary px-4 py-2 text-white">Learn More</a></p>*@
                        </div>
                        <div class="p-4 mb-3 bg-white">
                            <div class="col-md-12">
                                <button id="ReprintButton" type="button" class="btn btn-primary py-2 px-4 text-white w-100" onclick="location.href = '@Url.Action("Reprint", "Talk")'">
                                    <span class="fa fa-print" aria-hidden="true"></span> Reprint Entry Pass
                                </button>
                                <button id="CancelButton" type="button" class="btn btn-primary my-2 py-2 px-4 text-white w-100" onclick="location.href = '@Url.Action("CancelRegistration", "Talk")'">
                                    <span class="fa fa-times" aria-hidden="true"></span> Cancel Registration
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <iframe id="RegPass" class="HiddenBlock" width="100%" height="1000px" allowfullscreen src="" style="border:none"></iframe>
    </div>
</div>

<script>

    function registerNow(formData) {
        $.ajax({
            type: "POST",
            url: "/Talk/Register",
            data: formData,
            dataType: 'binary',
            xhrFields: {
                responseType: 'blob'
            },
            success: function (result) {
                $('#SubmitOfNewForm').val("Register");
                $('#SubmitOfNewForm').removeAttr("disabled");
                if (result.type === "application/pdf") {
                    console.log('File downloaded');
                    if (!is_touch_device()) {
                        $('#RegPass').attr('src', window.URL.createObjectURL(result));
                        $("#RegPass").removeClass("HiddenBlock");
                        $("#RegPass").addClass("visibleBlock");
                        $("#MainBlock").removeClass("visibleBlock");
                        $("#MainBlock").addClass("HiddenBlock");
                    }
                    saveAs(result, "Entry Pass.pdf");
                    showPopup(5);
                } else {
                    $('#SubmitOfNewForm').val("Register");
                    if (result.size === 2) {
                        showPopup(1);
                        console.log('Duplicate');
                    } else
                        showPopup(3);
                    console.log("Technical Error");
                }
            },
            error: function (data) {
                console.log('error : data code is : ' + data.Code);
            }
        });
        return false;
    }

    $('#SubmitOfNewForm').click(function () {
        var $form = $('#NewEntryForm');
        if (!$form.valid()) {
            return false;
        } else {
            $('#SubmitOfNewForm').attr("disabled", "disabled");
            $('#SubmitOfNewForm').val("Please wait...");
            $.ajax({
                type: "POST",
                url: "/Talk/SemiFilledForm",
                data: $('#NewEntryForm').serialize(),
                success: function (result) {
                    swal("Please enter the OTP sent to your mobile",
                        {
                            content: "input"
                        })
                        .then((value) => {
                            if (result.OTPCode === `${value}`) {
                                registerNow($('#NewEntryForm').serialize());
                            } else {
                                $('#SubmitOfNewForm').removeAttr("disabled");
                                $('#SubmitOfNewForm').val("Register");
                                swal("Failure!", "The OTP you entered is invalid", "error");
                            }
                        });
                },
                error: function (data) {
                    $('#SubmitOfNewForm').removeAttr("disabled");
                    $('#SubmitOfNewForm').val("Register");
                    console.log('error : data code is : ' + data.Code);
                }
            });
        }
        return false;
    });

</script>
