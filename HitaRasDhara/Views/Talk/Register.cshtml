<div style="background: #f8f9fa;">
    <div class="site-blocks-cover inner-page-cover desktop" style="background-image: url(/img/Geeta1Post.jpg);min-height: 520px;background-position: 100% 0px;">
    </div>
    <div class="site-blocks-cover inner-page-cover tablet" style="background-image: url(/img/Geeta1Post.jpg);min-height: 100px;background-position: 100% 0px;">
    </div>
    <div class="site-blocks-cover inner-page-cover mobile" style="background-image: url(/img/Geeta1PostMobile.jpg);min-height: 520px;background-position: 100% 0px;">
    </div>
</div>
<div class="site-section bg-light" id="section-contact">
    @model HitaRasDhara.Models.UserResponse5Aug
    <div class="container">
        <div class="row justify-content-center mb-5 ml-2 mr-2" id="MainBlock">
            <div class="order-md-1">
                <div class="text-left pb-1 border-primary mb-4">
                    <h2 class="text-primary">Registration</h2>
                </div>
                <div class="row">
                    <div class="col-md-5 mobile">
                        <div class="p-4 mb-3 bg-white">
                                                        <h3 class="h5 text-black mb-3">Namaskar, </h3>
                                                        <ul>
                              <li>Please fill details accurately as per your govt. issued ID proof.</li>
                              <li>You need to be 14 years or above to participate in the session</li>
                              <li>Seats will be allotted on first come first basis.</li>
                            </ul>
                                                    </div>
                    </div>
                    <div class="col-md-7 mb-5">
                        @if (Request.QueryString["isAdmin"] == "true")
                        {
                            <form class="p-5 bg-white form-horizontal" id="NewEntryForm" method="post" >
                                @{
                                    List<SelectListItem> AllowedYearOfBirth = new List<SelectListItem>();
                                    for (int i = 2006; i >= 1920; i--)
                                    {
                                        AllowedYearOfBirth.Add(new SelectListItem
                                        {
                                            Text = i.ToString(),
                                            Value = i.ToString()
                                        });
                                    }
                                }
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", type = "text", id = "name", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Mobile", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "text", id = "Email", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City", required = "required" })
                                        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-12">
                                        @Html.DropDownListFor(model => model.YearOfBirth, AllowedYearOfBirth, "Select Year Of Birth", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(m => m.YearOfBirth, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @Html.Hidden("Question", "null")
                                <div class="row form-group">
                                    <div class="col-md-12" id="Submit">
                                        <input type="submit" id="SubmitOfNewForm" value="Register" class="btn btn-primary py-2 px-4 text-white w-100">
                                    </div>
                                </div>
                            </form>
                                    }
                                    else
                                    {
                                        
                                        <img src="https://www.hitaambrish.com/stat/img/talk/closed.jpg" id="HouseFullBlock"style="width: 100%;">
                                    }
                    </div>
                    <div class="col-md-5">
                        <div class="p-4 mb-3 bg-white desktop">
                                                        <h3 class="h5 text-black mb-3">Namaskar, </h3>
                                                                       <ul>
                              <li>Please fill details accurately as per your govt. issued ID proof.</li>
                              <li>You need to be 14 years or above to participate in the session</li>
                              <li>Seats will be allotted on first come first basis.</li>
                            </ul>
                                                    </div>
                        <div class="p-4 mb-3 bg-white">
                            <div class="col-md-12">
                                <button id="ReprintButton" type="button" class="btn btn-primary py-2 px-4 text-white w-100" onclick="location.href = '@Url.Action("Reprint", "Talk")'">
                                    <span class="fa fa-print" aria-hidden="true"></span> Reprint Entry Pass
                                </button>
                                <button id="CancelButton" type="button" class="btn btn-primary my-2 py-2 px-4 text-white w-100" onclick="location.href = '@Url.Action("CancelRegistration", "Talk")'">
                                    <span class="fa fa-times" aria-hidden="true"></span> Cancel Registration
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <iframe id="RegPass" class="HiddenBlock" width="100%" height="1000px" allowfullscreen src="" style="border:none"></iframe>
    </div>
</div>

<script>

    function registerNow(formData) {
        $.ajax({
            type: "POST",
            url: "/Talk/Register",
            data: formData,
            dataType: 'binary',
            xhrFields: {
                responseType: 'blob'
            },
            success: function (result) {
                $('#SubmitOfNewForm').val("Register");
                $('#SubmitOfNewForm').removeAttr("disabled");
                if (result.type === "application/pdf") {
                    console.log('File downloaded');
                    if (!is_touch_device()) {
                        $('#RegPass').attr('src', window.URL.createObjectURL(result));
                        $("#RegPass").removeClass("HiddenBlock");
                        $("#RegPass").addClass("visibleBlock");
                        $("#MainBlock").removeClass("visibleBlock");
                        $("#MainBlock").addClass("HiddenBlock");
                    }
                    saveAs(result, "Entry Pass.pdf");
                    showPopup(5);
                } else {
                    $('#SubmitOfNewForm').val("Register");
                    if (result.size === 2) {
                        showPopup(1);
                        console.log('Duplicate');
                    } else
                        showPopup(3);
                    console.log("Technical Error");
                }
            },
            error: function (data) {
                console.log('error : data code is : ' + data.Code);
            }
        });
        return false;
    }

    $('#SubmitOfNewForm').click(function () {
        var $form = $('#NewEntryForm');
        var emailRegex = RegExp(/^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/);
        var enteredEmail = $("#Email").val();

        if (!$form.valid()) {
            return false;
        } else {
            if (!emailRegex.test(enteredEmail) && enteredEmail !== "") {
                swal('Invalid Email address!',
                    'You seem to have entered an invalid email address. Kindly verify the same and resubmit the form.',
                    'error');
                return false;
            }
            $('#SubmitOfNewForm').attr("disabled", "disabled");
            $('#SubmitOfNewForm').val("Please wait...");
            $.ajax({
                type: "POST",
                url: "/Talk/SemiFilledForm",
                data: $('#NewEntryForm').serialize(),
                success: function (result) {
                    swal("Please enter the OTP sent to your mobile",
                            {
                                content: "input"
                            })
                        .then((value) => {
                            if (result.OTPCode === `${value}`) {
                                registerNow($('#NewEntryForm').serialize());
                            } else {
                                $('#SubmitOfNewForm').removeAttr("disabled");
                                $('#SubmitOfNewForm').val("Register");
                                swal("Failure!", "The OTP you entered is invalid", "error");
                            }
                        });
                },
                error: function (data) {
                    $('#SubmitOfNewForm').removeAttr("disabled");
                    $('#SubmitOfNewForm').val("Register");
                    console.log('error : data code is : ' + data.Code);
                }
            });
        }
        return false;
    });
    
    
</script>
