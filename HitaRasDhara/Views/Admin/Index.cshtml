﻿@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active"> Event </li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Event - Decoding GITA by HITA</h1>
    </div>
</div><!--/.row-->
<div class="panel panel-container">
    <div class="row">
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-teal panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-check-square color-blue"></em>
                    <div class="large">@ViewBag.TotalRegistration</div>
                    <div class="text-muted">Total Registrations</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-check-square color-teal"></em>
                    <div class="large">@ViewBag.RegisteredUsers</div>
                    <div class="text-muted">Active Registrations</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-close color-red"></em>
                    <div class="large">@ViewBag.CancelledUsers</div>
                    <div class="text-muted">Cancelled Registrations</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-orange panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-users color-teal"></em>
                    <div class="large">@ViewBag.EnteredUsers</div>
                    <div class="text-muted">Entered Listeners</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            @*<div class="panel panel-red panel-widget">
                    <div class="row no-padding">
                        <em class="fa fa-xl fa-eye color-red"></em>
                        <div class="large"> @ViewBag.NoShowListeners </div>
                        <div class="text-muted">No Show Listeners</div>
                    </div>
                </div>*@
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3" style="padding: 10px 10px 10px 10px;">
            <button type="button" class="btn btn-lg btn-primary" onclick="location.href='@Url.Action("EventDetailed", "Admin")'" style="margin: 35px auto auto -15px;">View Detailed Report</button>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3" style="padding: 10px 10px 10px 10px;">
            <button type="button" class="btn btn-lg btn-primary" onclick="location.href='@Url.Action("ExportListFromTsvDashboard", "Admin")'" style="margin: 35px auto auto -15px;">Download Detailed Report</button>
        </div>
    </div><!--/.row-->
</div>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Event Registration Status
                <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
            </div>
            <div class="panel-body">
                <div class="canvas-wrapper">
                    <canvas class="chart" id="doughnut-chart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    var customDoughnutData = [
        {
            value: @ViewBag.RegisteredUsers,
            color: "#30a5ff",
            highlight: "#62b9fb",
            label: "Active Registrations"
        },
        {
            value: @ViewBag.EnteredUsers,
            color: "#1ebfae",
            highlight: "#3cdfce",
            label: "Entered Listeners"
        },
        {
            value: @ViewBag.CancelledUsers,
            color: "#f9243f",
            highlight: "#f6495f",
            label: "Cancelled Registrations"
        }

    ];

    window.onload = function () {
        var chart3 = document.getElementById("doughnut-chart").getContext("2d");
        window.myDoughnut = new Chart(chart3).Doughnut(customDoughnutData, {
            responsive: true,
            segmentShowStroke: false
        });
    };
</script>	